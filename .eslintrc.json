{
  "env": {
    "browser": true,
    "es2020": true,
    "node": true
  },
  "extends": ["eslint:recommended"],
  "ignorePatterns": [
    "dist",
    "node_modules",
    "coverage",
    "build",
    "playwright-report",
    "test-results",
    "mobile",
    "*.config.ts",
    "*.config.js"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "no-unused-vars": "warn"
  },
  "globals": {
    "__dirname": "readonly",
    "process": "readonly"
  },
  "overrides": [
    {
      "files": ["scripts/**/*.js", "tests/**/*.js", "**/*.test.js"],
      "rules": {
        "no-console": "off"
      }
    }
  ]
}
