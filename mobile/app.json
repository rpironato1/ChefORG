{
  "expo": {
    "name": "ChefORG",
    "slug": "cheforg-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.cheforg.mobile",
      "infoPlist": {
        "NSCameraUsageDescription": "Este app usa a câmera para escanear códigos QR de mesas e pedidos.",
        "NSFaceIDUsageDescription": "Este app usa Face ID para autenticação segura.",
        "NSMicrophoneUsageDescription": "Este app pode usar o microfone para notificações por voz."
      },
      "buildNumber": "1"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.cheforg.mobile",
      "versionCode": 1,
      "permissions": [
        "CAMERA",
        "USE_FINGERPRINT",
        "USE_BIOMETRIC",
        "VIBRATE",
        "RECEIVE_BOOT_COMPLETED",
        "WAKE_LOCK"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Permitir acesso à câmera para escanear códigos QR."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#ffffff",
          "sounds": [
            "./assets/notification.wav"
          ]
        }
      ],
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Permitir acesso ao Face ID para autenticação segura."
        }
      ],
      [
        "expo-barcode-scanner",
        {
          "cameraPermission": "Permitir acesso à câmera para escanear códigos QR e de barras."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "cheforg-mobile-project-id"
      }
    },
    "owner": "cheforg"
  }
}
